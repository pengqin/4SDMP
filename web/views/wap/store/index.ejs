<%- include ../header %>

<section id="carousel" data-transition="slide">
    <header>
        <div class="centered title">首页</div>
    </header>
    <article id="cars" class="active block" data-control="carousel">
        <div>
            <div align="center">
                <img src="/wap/images/car1.jpg">
            </div>
            <div align="center">
                <img src="/wap/images/car2.jpg">
            </div>
            <div align="center">
                <img src="/wap/images/car3.jpg">
            </div>
            <div align="center">
                <img src="/wap/images/car4.jpg">
            </div>
        </div>
    </article>
</section>

<script>
window.readyhandler = function() {
    var el = Lungo.dom('[data-control=carousel]').first()[0];
    var slide = Lungo.Element.Carousel(el, function(index, element) {
        Lungo.dom("section#carousel .title span").html(index + 1);
    });
    setInterval(function() {
        slide.next();
    }, 4000);
};
</script>
